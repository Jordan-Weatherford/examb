<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Login and Registration</title>
    </head>
    <body>
        <h1>Welcome!</h1>

        <h4>Register</h4>
        <form action="/register" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            Name:
            <input type="text" name="user[name]">
            Alias:
            <input type="text" name="user[alias]">
            Email:
            <input type="text" name="user[email]">
            Password:
            <input type="text" name="user[password]">
            Confirm PW:
            <input type="text" name="user[password_confirmation]">
            <input type="submit" value="Register">
        </form>

        <% if flash[:registration_errors] %>
        <ul>
            <% flash[:registration_errors].each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul
        <% end %>


        <h4>Login</h4>
        <form action="/login" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            Email:
            <input type="text" name="email">
            Password:
            <input type="text" name="password">
            <input type="submit" value="Login">
        </form>

        <% if flash[:login_errors] %>
        <ul>
            <% flash[:login_errors].each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul
        <% end %>
    </body>
</html>
